@page
@model PrograWebPractica2.Pages.RazorPages.CalculoPageModel
@{
}
<h1>Calculos</h1>
<form method="post" asp-page="/RazorPages/Resumen">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">PRODUCTO</th>
                <th scope="col">CANTIDAD</th>
                <th scope="col">P/U</th>
                <th scope="col">SUBTOTAL</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var producto in Model.ProductosFiltro){
                
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Cantidad</td>
                    <td>@producto.Precio</td> 
                    <td>@(producto.Precio * producto.Cantidad)</td>
                </tr>
                }
            }
            <tr>
                <td colspan="3">TOTAL</td>
                <td>Bs.- @(Model.CalcularTotal())</td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" name="nombre", value="@Model.ClienteFiltrto.Nombre"/>

    <input type="hidden" name="apellido" , value="@Model.ClienteFiltrto.Apellido" />

    <input type="hidden" name="ci" , value="@Model.ClienteFiltrto.CiNit" />

    <input type="hidden" name="total" , value="@Model.CalcularTotal()" />
    <div class="col-12">
        <button class="btn btn-primary" type="submit" asp-route-nombreR="@Model.ClienteFiltrto.Nombre" 
        asp-route-apellidoR="@Model.ClienteFiltrto.Apellido" asp-route-ciR="@Model.ClienteFiltrto.CiNit" 
        asp-route-totalV="@Model.CalcularTotal().ToString()" >Enviar Resumen</button>
    </div>
</form>